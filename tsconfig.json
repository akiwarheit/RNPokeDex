{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "baseUrl": ".",
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "paths": {
      "@domains/*": ["src/Domains/*"],
      "@components/*": ["src/Components/*"],
      "@views/*": ["src/Views/*"],
      "@assets/*": ["assets/*"]
    }
  },
  "exclude": [
    "node_modules",
    "node_modules/**",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "storybook/**"
  ]
}
